---
import Base from '../layouts/Base.astro';
---

<Base title="Sitemap" page="Sitemap" description="Complete site navigation and structure for Brennan Reilly's website.">
	<div class="sitemap-container">
		<h1>Site Navigation</h1>
		
		<div class="sitemap-section">
			<h2>Main Pages</h2>
			<div class="sitemap-grid">
				<div class="sitemap-item">
					<a href="/" class="sitemap-link">
						<span class="link-title">Home</span>
						<span class="link-desc">Main landing page</span>
					</a>
				</div>
				<div class="sitemap-item">
					<a href="/about" class="sitemap-link">
						<span class="link-title">About</span>
						<span class="link-desc">Learn about Brennan Reilly</span>
					</a>
				</div>
				<div class="sitemap-item">
					<a href="/resume" class="sitemap-link">
						<span class="link-title">My Work</span>
						<span class="link-desc">Portfolio and experience</span>
					</a>
				</div>
				<div class="sitemap-item">
					<a href="/contact" class="sitemap-link">
						<span class="link-title">Contact</span>
						<span class="link-desc">Get in touch</span>
					</a>
				</div>
				<div class="sitemap-item">
					<a href="/legal" class="sitemap-link">
						<span class="link-title">Legal</span>
						<span class="link-desc">Business information & policies</span>
					</a>
				</div>
			</div>
		</div>

		<div class="sitemap-section">
			<h2>Resources</h2>
			<div class="sitemap-grid">
				<div class="sitemap-item">
					<a href="/resume/Reilly-Brennan-Resume.pdf" class="sitemap-link">
						<span class="link-title">Resume PDF</span>
						<span class="link-desc">Downloadable resume</span>
					</a>
				</div>
				<div class="sitemap-item">
					<a href="/sitemap.xml" class="sitemap-link muted">
						<span class="link-title">XML Sitemap</span>
						<span class="link-desc">For search engines</span>
					</a>
				</div>
			</div>
		</div>

		<div class="sitemap-section">
			<h2>Site Information</h2>
			<div class="block">
				<p><strong>Brennan Reilly</strong> - Live sound engineer & designer</p>
				<p>This website showcases professional experience, portfolio work, and provides contact information for potential collaborations and opportunities.</p>
			</div>
		</div>
	</div>
</Base>
